rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isLibraryUser(libraryId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/libraries/$(libraryId)/users/$(request.auth.uid));
    }

    function getUserData(libraryId) {
      return get(/databases/$(database)/documents/libraries/$(libraryId)/users/$(request.auth.uid)).data;
    }

    function isAdmin(libraryId) {
      return isLibraryUser(libraryId) && getUserData(libraryId).role == "libraryOwner";
    }

    function isStaff(libraryId) {
      return isLibraryUser(libraryId) && (getUserData(libraryId).role == "libraryOwner" || getUserData(libraryId).role == "libraryStaff");
    }
    
    function isLibraryOwner(libraryId) {
        return isAdmin(libraryId) && get(/databases/$(database)/documents/libraries/$(libraryId)).data.ownerId == request.auth.uid;
    }

    // --- TOP-LEVEL COLLECTIONS ---

    match /users/{userId} {
      allow get: if isOwner(userId);
      // Allow creation of initial mapping. Prevent self-escalation to platform 'admin'.
      allow create: if isOwner(userId) && (!request.resource.data.keys().contains('role') || request.resource.data.role != 'admin');
      allow update: if isOwner(userId) && (!request.resource.data.keys().contains('role') || request.resource.data.role == resource.data.role);
      allow list, delete: if false;
    }

    // ==================== LIBRARY-SCOPED COLLECTIONS ====================

    match /libraries/{libraryId} {
      allow read: if isLibraryUser(libraryId);
      allow update: if isAdmin(libraryId);
      // Allow authenticated users to create their first library
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow delete: if false;
    }

    match /libraries/{libraryId}/users/{userId} {
      allow get: if isOwner(userId) || isStaff(libraryId);
      allow list: if isStaff(libraryId);
      // Allow creation during onboarding if the user matches the auth UID. 
      // We check request.auth.uid directly instead of isLibraryUser to allow the first user setup.
      allow create: if request.auth.uid == userId || isAdmin(libraryId);
      allow update: if isOwner(userId) || isAdmin(libraryId);
      allow delete: if isAdmin(libraryId);
    }

    match /libraries/{libraryId}/students/{studentId} {
      allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || isOwner(studentId));
      allow list: if isStaff(libraryId);
      allow create: if isOwner(studentId) || isStaff(libraryId);
      allow update: if isStaff(libraryId) || isOwner(studentId);
      allow delete: if isStaff(libraryId);
    }
    
    match /libraries/{libraryId}/seatBookings/{bookingId} {
        allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || resource.data.studentId == request.auth.uid);
        allow list: if isStaff(libraryId);
        allow create: if isStaff(libraryId); 
        allow update: if isStaff(libraryId);
        allow delete: if false;
    }
    
    match /libraries/{libraryId}/bills/{billId} {
      allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || resource.data.studentId == request.auth.uid);
      allow list: if isStaff(libraryId);
      allow create, update: if isStaff(libraryId);
      allow delete: if false;
    }

    match /libraries/{libraryId}/payments/{paymentId} {
      allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || resource.data.studentId == request.auth.uid);
      allow list: if isStaff(libraryId);
      allow create: if isStaff(libraryId);
      allow update, delete: if false;
    }

    match /libraries/{libraryId}/expenses/{expenseId} {
      allow read, write: if isAdmin(libraryId);
    }

    match /libraries/{libraryId}/rooms/{roomId} {
      allow read: if isLibraryUser(libraryId);
      allow write: if isStaff(libraryId);

      match /seats/{seatId} {
        allow read: if isLibraryUser(libraryId);
        allow write: if isStaff(libraryId);
      }
    }

    match /libraries/{libraryId}/announcements/{announcementId} {
      allow read: if isLibraryUser(libraryId);
      allow write: if isStaff(libraryId);
    }

    match /libraries/{libraryId}/suggestions/{suggestionId} {
      allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || resource.data.studentId == request.auth.uid);
      allow list: if isStaff(libraryId);
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update, delete: if isStaff(libraryId);
    }

    match /libraries/{libraryId}/printRequests/{printRequestId} {
      allow get: if isLibraryUser(libraryId) && (isStaff(libraryId) || resource.data.studentId == request.auth.uid);
      allow list: if isStaff(libraryId);
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update, delete: if isStaff(libraryId);
    }
    
    match /libraries/{libraryId}/activityLogs/{logId} {
      allow get, list: if isAdmin(libraryId);
      allow create: if isStaff(libraryId) || isAuthenticated(); 
      allow update, delete: if false;
    }
    
    match /libraries/{libraryId}/invites/{inviteId} {
        allow read: if isAuthenticated();
        allow create, delete: if isAdmin(libraryId);
        allow update: if isAdmin(libraryId) || (isAuthenticated() && !resource.data.used && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['used', 'usedBy']));
    }
    
    match /libraries/{libraryId}/ownershipTransfers/{transferId} {
        allow read: if isAdmin(libraryId);
        allow create: if isLibraryOwner(libraryId);
        allow update: if (isLibraryOwner(libraryId) && request.resource.data.status == 'cancelled') || 
                      (request.auth.uid == resource.data.toUserId && request.resource.data.status == 'accepted');
        allow delete: if false;
    }

    // --- COLLECTION GROUP RULES ---
    
    match /{path=**}/invites/{inviteId} {
      allow get: if isAuthenticated();
      allow list: if isAuthenticated() && request.query.limit <= 1;
    }
  }
}
