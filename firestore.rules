/**
 * Core Philosophy: This ruleset enforces a strict multi-tenant security model for a library system.
 * The primary goal is data isolation, ensuring that users (admins and students) from one library
 * can never see or modify data from another library. Access control within a library is role-based.
 *
 * MODIFICATION FOR DEMO: The original rules relied on custom claims (role, libraryId) which are not
 * present in the app's anonymous authentication. The rules have been simplified to allow any
 * authenticated user (`request.auth != null`) to perform actions. This makes the app functional
 * for demonstration but should be replaced with a full role-based system for production.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for Reusable Logic

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the wildcard user ID from the path.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /libraries/{libraryId} {
      allow get: if isSignedIn();
      allow list: if false; // Listing all libraries is disallowed.
      allow create, update, delete: if false; // Client cannot modify libraries.
    }

    // Users
    match /libraries/{libraryId}/users {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/users/{userId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Students
    match /libraries/{libraryId}/students {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/students/{studentId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Payments
    match /libraries/{libraryId}/payments {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/payments/{paymentId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Expenses
    match /libraries/{libraryId}/expenses {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/expenses/{expenseId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Rooms and Seats
    match /libraries/{libraryId}/rooms {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/rooms/{roomId} {
      allow get, create, update, delete: if isSignedIn();

      match /seats {
        allow list: if isSignedIn();
      }
      match /seats/{seatId} {
        allow get, create, update, delete: if isSignedIn();
      }
    }

    // Announcements
    match /libraries/{libraryId}/announcements {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/announcements/{announcementId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Suggestions
    match /libraries/{libraryId}/suggestions {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/suggestions/{suggestionId} {
      allow get, create, update, delete: if isSignedIn();
    }

    // Print Requests
    match /libraries/{libraryId}/printRequests {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/printRequests/{printRequestId} {
      allow get, create, update, delete: if isSignedIn();
    }
    
    // Activity Logs
    match /libraries/{libraryId}/activityLogs {
      allow list: if isSignedIn();
    }
    match /libraries/{libraryId}/activityLogs/{logId} {
      allow get, create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
